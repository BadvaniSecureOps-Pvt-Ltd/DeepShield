{
  "info": {
    "name": "DeepShield API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Predict",
      "request": {
        "method": "POST",
        "header": [
          { "key": "X-API-Key", "value": "mysecretkey" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "sample.jpg" },
            { "key": "metadata", "value": "{\"source\":\"mobile-app\",\"user_id\":\"123\"}", "type": "text" }
          ]
        },
        "url": {
          "raw": "http://localhost:8000/predict",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["predict"]
        }
      }
    }
  ]
}
